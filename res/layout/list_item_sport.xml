<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textViewtitleSports"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textColor="#FFFFFF"
        android:paddingTop="5dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp" 
        >   
	<ImageView 
	    	android:id = "@+id/ivSportsLocation"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/location"
	        android:layout_gravity="center_horizontal"
	        android:paddingLeft="1dp"/>
        

        <TextView
            android:id="@+id/textViewlocationSports"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:text="Location"
            android:textAppearance="?android:attr/textAppearanceSmall"
             android:textColor="#FFFFFF" />
        </LinearLayout>
        
     
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp" 
        > 
		<ImageView android:id = "@+id/ivSportsLocation"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/timelol"
	        android:layout_gravity="center_horizontal"/>
		
        <TextView
            android:id="@+id/textViewtimeSports"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingBottom ="5dp"
            android:text="Time"
            android:textAppearance="?android:attr/textAppearanceSmall"
             android:textColor="#FFFFFF"/>
        
        </LinearLayout>

        
    </LinearLayout>
    
    <View
        android:id="@+id/eViewSports"
        android:layout_width="fill_parent"
        android:layout_height="4dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#0E98C0" />

</LinearLayout>
